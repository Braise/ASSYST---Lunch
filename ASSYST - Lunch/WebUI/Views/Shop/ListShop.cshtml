@model IEnumerable<Domain.Entities.Shop>

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Magasins</h3>
    </div>
    <div class="card-body">
        <table class="table table-striped table-bordered">
            <tr>
                <th class="text-center">Nom</th>
                <th class="text-center">Adresse</th>
                <th class="text-center">Téléphone</th>
                <th class="text-center">Email</th>
                <th class="text-center">Commander avant</th>
                <th class="text-center">Actif</th>
                <th class="text-center">Actions</th>
            </tr>
            @foreach(var shop in Model)
            {
                <tr>
                    <td class="text-center">@shop.Name</td>
                    <td class="text-center">@string.Concat(shop.ZipCode, " ", shop.City, ", ", shop.Street, " ", shop.Number )</td>
                    <td class="text-center">@shop.Phone</td>
                    <td class="text-center">@shop.Mail</td>
                    <td class="text-center">@shop.OrderBefore</td>
                    <td class="text-center">
                        @if (shop.IsActive)
                        {
                            <label>Actif</label>
                        }
                        else
                        {
                            <label>Inactif</label>
                        }
                    </td>
                    <td class="text-center">@Html.ActionLink("Modifier", "EditShop", new { shop.Guid })</td>
                </tr>
            }
        </table>
    </div>
    <div class="card-footer">
        @Html.ActionLink("Ajouter un magasin", "CreateShop", null, new { @class = "btn btn-default"})
    </div>
</div>
