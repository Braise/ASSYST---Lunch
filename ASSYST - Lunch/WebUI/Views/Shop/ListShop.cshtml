@model IEnumerable<Domain.Entities.Shop>

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Magasins</h3>
    </div>
    <div class="card-body">
        <table class="table table-striped table-bordered">
            <tr>
                <th>Nom</th>
                <th>Adresse</th>
                <th>Téléphone</th>
                <th>Email</th>
                <th>Commander avant</th>
            </tr>
            @foreach(var shop in Model)
            {
                <tr>
                    <td>@shop.Name</td>
                    <td>@string.Concat(shop.ZipCode, " ", shop.City, " ", shop.Street, " ", shop.Number )</td>
                    <td>@shop.Phone</td>
                    <td>@shop.Mail</td>
                    <td>@shop.OrderBefore</td>
                </tr>
            }
        </table>
    </div>
    <div class="card-footer">
        @Html.ActionLink("Ajouter un magasin", "CreateShop", null, new { @class = "btn btn-default"})
    </div>
</div>
